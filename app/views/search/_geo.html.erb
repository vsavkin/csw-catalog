<% if (@geo) then %>
    <div class="additional_query">
      <span class="big_plus">+</span> <%= @geo.to_s %>
      <%= link_to_remote 'Edit',
                         :update => 'geo',
                         :url => {:action => 'geo_form'},
                         :with => "'show=true'" %>
    </div>
<% else %>
    <%= link_to_remote 'Add Spatial Restrictions',
                       :update => 'geo',
                       :url => {:action => 'geo_form'},
                       :with => "'show=true'" %>
<% end %>